/**index.wxss**/
@import "../wxSearch/wxSearch.wxss";
@import "font.wxss";

.wxSearch-input{
  font-size: 16px;
  /*border-radius: 15px;*/
}
.userinfo-nickname {
  color: #aaa;
}

.wxSearch-section{
  position: fixed;
  background: #4CAF50;
  border: 0px;
  z-index:5;
  width:100%;
}
.wxSearch-button{
  font-size: 16px !important;
  color:whitesmoke !important;

}

.mentiontext{
  position: absolute;
  top:45%;
  margin-left: 36%;
  font-size: 24px;
  color:#aaa;
}

.card {
  position: relative;
  top:50px;
  background: #fff;
  border-radius: 2px;
  display: inline-block;
  margin: 0rem;
  margin-top:100px;
  margin-bottom:10px;
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  width:100%;
  z-index:1;
}

.infoBanner{
  padding-top:10px;
  padding-left:30px;
  padding-bottom:10px;

}

.infoContent{
  padding-top:10px;
  padding-left:30px;
}



.stationName{
  color:dodgerblue;
  font-size: 22px;
  float:left;
  
}

.updateTime{
  color:  orange;
  font-size: 16px;
  margin-left: auto;
  margin-right:0.8rem;
  float:right;
  padding-left:0.5rem;
  padding-right:0.5rem;
  padding-top:0.15rem;
  border: 1px solid orange;
  border-radius: 15px;
}

.cd-timeline {
  position: relative;
  padding: 1em 0;
  margin-top: 1em;
  margin-bottom: 1em;
}
.cd-timeline::before {
  content: '';
  position: absolute;
  top: 40px;
  left: 18px;
  bottom:30px;
  width: 2px;
  background: gainsboro;
}


.red-point:before {
  position: relative;
  top:18px;
  content: ' ';
  display: block;
  width: 10px;
  height: 10px;
  margin-top: -10px;
  left:-19px;
  background: #fff;
  border-radius: 10px;
  border: 3px solid rgb(255,80,80);
  z-index: 2;
}

.red-point2:before {
  position: relative;
  top:35px;
  content: ' ';
  display: block;
  width: 10px;
  height: 10px;
  margin-top: -10px;
  left:-19px;
  background: #fff;
  border-radius: 10px;
  border: 3px solid rgb(255,80,80);
  z-index: 2;
}

.LineName{
  font-size:26px;
	font-family: "Nova Square";
	font-style: normal;
	font-variant: normal;
	font-weight: 500;
	line-height: 26.4px;
  height: 60px;
  padding-top:20px;
}

.txtGo{
  margin-left:10px;
  color:#888;
  font-size:16px;
}


.line1 {
  background-color: #EEE;
  height: 2px;
  width: 80%;
  margin: 0.25em auto 0.55em;
  border: 0px none;
  clear:both;
