}

.txtNext{
  margin-top:16px;
  margin-left:10px;
  color:#888;
  font-size:16px;
}

.txtRight{
  margin-left: auto;
  margin-right:2.5rem;
  float:right;
}

.txtLefttime{
  color:orange;
